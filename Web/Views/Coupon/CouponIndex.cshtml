
@model IEnumerable<CouponDto>
<div class="card shadow-lg border-0 mt-4">
    <div class="card-header bg-dark text-white py-4">
        <h2 class="text-center mb-0">Coupons List</h2>
    </div>

    <div class="card-body p-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h5 class="fw-bold">Manage Your Coupons</h5>
            <a asp-action="CouponCreate"  class="btn btn-primary shadow-sm">
                <i class="bi bi-plus-square me-2"></i> Create New Coupon
            </a>
        </div>

        <table class="table table-hover table-bordered align-middle">
            <thead class="table-dark">
            <tr>
                <th>Coupon Code</th>
                <th>Discount Amount</th>
                <th>Minimum Amount</th>
                <th class="text-center">Actions</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CouponCode </td>
                    <td>@((item.DiscountAmount).ToString("c"))</td>
                    <td>@((item.MinAmount).ToString("c"))</td>
                    <td class="text-center">
                        <a asp-action="CouponDelete" asp-route-couponId="@item.CouponId" class="btn btn-sm btn-outline-danger">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
